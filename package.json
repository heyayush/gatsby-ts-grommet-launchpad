{
  "name": "gatsby-ts-grommet-launchpad",
  "private": true,
  "description": "launchpad for the gatsby grommet ts desired architecture",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn run clean && gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,scss,json,md}\"",
    "start": "yarn run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "lint": "yarn run lint-es && yarn run lint-css",
    "lint-es": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint-css": "stylelint \"src/**/*.scss\" \"src/**/*.html\"",
    "lint-css:fix": "stylelint \"src/**/*.scss\" \"src/**/*.html\" --fix"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "gatsby": "^2.19.45",
    "gatsby-plugin-html-attributes": "^1.0.5",
    "gatsby-plugin-manifest": "^2.3.2",
    "gatsby-plugin-offline": "^3.1.1",
    "gatsby-plugin-react-helmet": "^3.2.1",
    "gatsby-plugin-sass": "^2.2.1",
    "gatsby-plugin-typescript": "^2.3.1",
    "grommet": "^2.11.3",
    "grommet-icons": "^4.4.0",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "gatsby-cli": "^2.11.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.16.0",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heyayush/gatsby-ts-grommet-launchpad"
  },
  "bugs": {
    "url": "https://github.com/heyayush/gatsby-ts-grommet-launchpad/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,scss}": [
      "yarn run format",
      "yarn run lint && exit 0",
      "git add"
    ]
  }
}
